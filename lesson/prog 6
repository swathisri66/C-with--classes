// accept a number and validate it is a two digit number or not (including -ve values)
#include <iostream>
using namespace std;
int main()
{
   int x;
   cout<<"enter a 2 digit number ";
   cin>>x;
//   if((x>=10 && x<=99) || (x>=-99 && x<=-10))

   if ((x>=-99 && x<=99) && !(x>=-9 && x<=9))		// another method
     cout<<"success";   
   else
      cout<<"not a 2 digit number ";
}

