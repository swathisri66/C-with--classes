// program to find if the input value is even or odd number
#include <iostream>
using namespace std;
int main()
{
	int x;
	cout<<"enter a number ";
	cin>>x;
	if (x%2 == 0)
		cout<<"\n even number";
	else
		cout<<"\n odd number";
	if (x%2 == 1)
		cout<<"\n odd number";
	else
		cout<<"\n even number";
	if (x%2 != 0)
		cout<<"\n odd number";
	else
		cout<<"\n even number";
	if (!(x%2 == 0))
		cout<<"\n odd number";
	else
		cout<<"\n even number";
	int r=x%10;
	if (r==1 || r==3 || r==5 || r==7 ||r==9)
		cout<<"\n odd number";
	else
		cout<<"\n even number";

    if (r!=1 && r!=3 && r!=5 && r!=7 && r!=9)
		cout<<"\n even number";
	else
		cout<<"\n odd number";

	if (!(r==1 || r==3 || r==5 || r==7 ||r==9))
		cout<<"\n even number";
	else
		cout<<"\n odd number";    	
}
