// accept a 2 digit number and print if first digit is big or 
// second digit is big or both digits are same
#include <iostream>
using namespace std;
int main()
{
   	int x;
   	cout<<"enter a 2 digit number ";
   	cin>>x;
   	if ((x>=10 && x<=99) || (x>=-99 && x<=-10))
   	{
/*	   	if (x/10 > x%10)
	    	cout<<"first digit is big";
   		else if (x/10 < x%10)
    		cout<<"second digit is big";
	    else
    	   	cout<<"both digits are equal";  */
cout<<((x/10 > x%10)?"first digit is big":(x/10 < x%10)?"second digit is big":"both digits are equal");
    }
    else
    	cout<<"not a 2 digit number";
}
