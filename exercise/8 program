/* program to accept a single digit number and print it in words (including -ve nos) */
#include <iostream>
using namespace std;
int main()
{
	int n;
	cout<<"\n enter a single digit ";
	cin>>n;
    if (n>=-9 && n<=-1)
    {
    	cout<<"(negative) ";
    	n=-n;
	}
	switch(n)
	{
		case 0 : cout<<"zero";   break;
		case 1 : cout<<"one";   break;
		case 2 : cout<<"two";   break;
		case 3 : cout<<"three";   break;
		case 4 : cout<<"four";   break;
		case 5 : cout<<"five";   break;
		case 6 : cout<<"six";   break;
		case 7 : cout<<"seven";   break;
		case 8 : cout<<"eight";   break;
		case 9 : cout<<"nine";   break;
		default: cout<<"not a single digit number";
	}
}
